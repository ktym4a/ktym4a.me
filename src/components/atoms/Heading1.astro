---
import Tag from '@/components/atoms/Tag.astro'
import type { ColorType } from '@/types/index'

interface Props {
    baseColor: ColorType
    text: string
    id: string
}

const { baseColor, text, id } = Astro.props
---

<Tag text='Title'>
    <h1
        class="-mt-8 pt-8 text-2xl font-bold before:content-['#'] md:text-4xl"
        id={id}
    >
        <span class={baseColor.text}>{text}</span>
    </h1>
</Tag>
