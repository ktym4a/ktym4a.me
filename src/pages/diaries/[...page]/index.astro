        @apply mt-3 text-base font-bold before:pr-3 before:text-ctp-text before:content-['####'] md:mt-4 md:text-lg;
    }

    .blog h5 {
        @apply mt-3 text-sm font-bold before:pr-3 before:text-ctp-text before:content-['#####'] md:mt-4 md:text-base;
